<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0099FF"
                android:endColor="#33CCFF"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#669999" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#00CCCC"
                android:startColor="#00CCFF"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#669999" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#00CCFF"
                android:startColor="#000066"
                android:angle="270" />
            <stroke
                android:width="5dp"
                android:color="#000033" />
            <corners
                android:radius="10dp" />
            
        </shape>
    </item>
</selector>
