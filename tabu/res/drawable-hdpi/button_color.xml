<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0066FF"
                android:endColor="#6666FF"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="#000033" />
            <corners
                android:radius="30dp" />
            
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#CC00FF"
                android:startColor="#CC66FF"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="#000033" />
            <corners
                android:radius="30dp" />
            
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#00CCFF"
                android:startColor="#000066"
                android:angle="270" />
            <stroke
                android:width="10dp"
                android:color="#000033" />
            <corners
                android:radius="30dp" />
            
        </shape>
    </item>
</selector>
